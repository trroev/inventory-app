<!DOCTYPE html>
<html>
  <%- include("./partials/head.ejs") %>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2">
          <%- include("./partials/sidebar.ejs") %>
        </div>
        <div class="col-sm-10">
          <h1>Item: <%= produce.name %></h1>

          <h4>
            <strong>Description:</strong>
            <p><%= produce.description %></p>
          </h4>
          <p><strong>Price:</strong> <%= produce.price %></p>
          <p><strong>Quantity:</strong> <%= produce.quantity %></p>
          <hr />
          <p>
            <a href="<%= produce.url %>/delete"
              >Delete Produce Item</a
            >
          </p>
          <p>
            <a href="<%= produce.url %>/update"
              >Update Produce Item</a
            >
          </p>
        </div>
      </div>
    </div>
  </body>
</html>
