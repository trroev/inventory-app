<!DOCTYPE html>
<html>
  <%- include("./partials/head.ejs") %>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2">
          <%- include("./partials/sidebar.ejs") %>
        </div>
        <div class="col-sm-10">
          <h1><%= title %></h1>

          <form method="POST" action="">
            <div class="form-group">
              <label for="name">Name:</label>
              <input
                id="name"
                class="form-control"
                type="text"
                placeholder="Produce name"
                name="name"
                required="true"
                value="<%= typeof produce === 'undefined' ? '' : produce.name %>"
              />
            </div>
            <div class="form-group">
              <label for="description">Description:</label>
              <textarea
                id="description"
                class="form-control"
                type="text"
                placeholder="Description..."
                name="description"
                required="true"
                value="<%= typeof produce === 'undefined' ? '' : produce.description %>"
              ></textarea>
            </div>
            <div class="form-group">
              <label for="price">Price:</label>
              <input
                id="price"
                class="form-control"
                type="text"
                placeholder="9.99"
                name="price"
                value="<%= typeof produce === 'undefined' ? '' : produce.price %>"
              />
            </div>
            <div class="form-group">
              <label for="quantity">Quantity:</label>
              <input
                id="quantity"
                class="form-control"
                type="text"
                placeholder="25"
                name="quantity"
                value="<%= typeof produce === 'undefined' ? '' : produce.quantity %>"
              />
            </div>
            <button class="btn btn-primary" type="submit">
              Submit
            </button>
          </form>

          <% if (typeof errors !== 'undefined' && errors.length > 0) {
          %>
          <ul>
            <% for (var i = 0; i < errors.length; i++) { %>
            <li><%= errors[i].msg %></li>
            <% } %>
          </ul>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
