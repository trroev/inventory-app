<!DOCTYPE html>
<html>
  <%- include("./partials/head.ejs") %>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2">
          <%- include("./partials/sidebar.ejs") %>
        </div>
        <div class="col-sm-10">
          <h1>Delete Item: <%= produce.name %></h1>

          <p>Do you really want to delete this item?</p>

          <form method="POST" action="">
            <div class="form-group">
              <input
                id="id"
                class="form-control"
                type="hidden"
                name="id"
                required="true"
                value="<%= produce._id %>"
              />
            </div>

            <button class="btn btn-primary" type="submit">
              Delete
            </button>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
