          <p><strong>Quantity:</strong> <%= dairy.quantity %></p>
          <hr />
          <p>
            <a href="<%= dairy.url %>/delete">Delete Dairy Item</a>
          </p>
          <p>
            <a href="<%= dairy.url %>/update">Update Dairy Item</a>
