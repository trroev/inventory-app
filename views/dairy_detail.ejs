<!DOCTYPE html>
<html>
  <%- include("./partials/head.ejs") %>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2">
          <%- include("./partials/sidebar.ejs") %>
        </div>
        <div class="col-sm-10">
          <h1>Item: <%= dairy.name %></h1>

          <h4>
            <strong>Description:</strong>
            <p><%= dairy.description %></p>
          </h4>
